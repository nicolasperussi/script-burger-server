{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": [
      "ES5"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@implementations/*": [
        "src/repositories/implementations/*"
      ],
      "@useCases/*": [
        "src/useCases/*"
      ]
    }
  }
}